{
    "manifest_version": 2,
    "name": "YNAB Percentage view",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://app.youneedabudget.com/*/budget/*"
            ],
            "js": [
                "index.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html"
    },
    "permissions": [
        "storage"
    ],
    "applications": {
        "gecko": {
            "id": "addon@example.com"
        }
    }
}
